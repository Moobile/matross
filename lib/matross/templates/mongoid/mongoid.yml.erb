<%= rails_env %>:
  sessions:
    default:
      database: <%= mongo_database.gsub("-", "_") %>
      hosts:
      <%- mongo_hosts.each do |host| -%>
        - <%= host %>
      <%- end -%>
      <% if exists?(:mongo_user) %>username: <%= mongo_user %><% end %>
      <% if exists?(:mongo_passwd) %>password: <%= mongo_passwd %><% end %>
